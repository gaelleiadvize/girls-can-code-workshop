<body>
    <header>
        <div class="logo container">
            <img src="images/logo.png" alt="Online movies">
        </div>
    </header>
    <div class="container">
        <nav>
            <ul>
                <li class="active">New release <%= coucou %></li>
                <li>Most popular</li>
                <li>Genres</li>
                <li>Blog</li>
                <li>Contact</li>
            </ul>
            <h1>Watch your favorite movies online</h1>
        </nav>


        <div class="myFavoriteMovies">
            <div class="myList">
                <h3 class="greyBg">My favorite movies</h3>
                <ul>
                    <li>
                        <form action="" method="">
                            <img src="images/movies.png" alt="movie" class="popcorn" />
                            <div class="title">My title</div>
                            <div class="line">
                                <span>Year:</span>
                                <span class="orange">Year</span>
                            </div>
                            <div class="line">
                                <span>Director:</span>
                                <span class="orange">Director</span>
                            </div>
                            <button type="submit" value="Submit" class="trash"><img src="images/trash.png" alt="Delete movie" /></button>
                        </form>
                    </li>
                    <li>
                        <form action="" method="">
                            <img src="images/movies.png" alt="movie" class="popcorn" />
